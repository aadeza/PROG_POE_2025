<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrnd3"
    tools:context=".Home">

    <!-- LinearLayout container for all UI elements -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:layout_editor_absoluteX="16dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerOther"
            android:layout_width="match_parent"
            android:layout_height="90dp"


            app:layout_constraintTop_toTopOf="parent">


            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="5dp"
                android:background="@android:color/transparent"
                android:contentDescription="Settings Button"
                android:src="@drawable/baseline_settings_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btnNotification"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnHideUnhide"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="62dp"
                android:layout_marginBottom="3dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnStreak"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                app:srcCompat="@drawable/eye" />

            <ImageButton
                android:id="@+id/btnStreak"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"

                android:layout_marginEnd="84dp"
                android:layout_marginBottom="2dp"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnNotification"
                app:layout_constraintStart_toEndOf="@+id/btnHideUnhide"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnNotification"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:background="@android:color/transparent"
                android:src="@drawable/bell"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btnSettings"
                app:layout_constraintStart_toEndOf="@+id/btnStreak"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerTextViews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:background="@drawable/card"
            app:layout_constraintTop_toBottomOf="@id/containerOther">

            <TextView
                android:id="@+id/txtMyProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/bokor"
                android:text="@string/txtTotalIncome"
                android:textColor="@color/white"
                android:textSize="55sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtGross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/tiro_devanagari_marathi"
                android:text="@string/txtProfit"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMyProfit" />

            <TextView
                android:id="@+id/txtMyMoney"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/bokor"
                android:text="@string/txtMyAmount"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtGross" />

            <TextView
                android:id="@+id/txtExpense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/tiro_devanagari_marathi"
                android:text="@string/txtExpense"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMyMoney" />

            <TextView
                android:id="@+id/txtMyExpenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/bokor"
                android:text="@string/txtTotalExpenses"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtExpense" />

            <TextView
                android:id="@+id/txtProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/tiro_devanagari_marathi"
                android:text="@string/txtIncome"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtMyExpenses" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Container for Main Buttons -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/containerButtons"
            android:layout_width="match_parent"
            android:layout_height="250dp"

            android:layout_marginBottom="0dp"
>


            <Button
                android:id="@+id/btnCreateBudget"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/purple"
                android:text="@string/btnCreateBudget"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btnGenerateReport"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_marginStart="123dp"
                android:layout_marginTop="7dp"
                android:backgroundTint="#A080DF"
                android:text="@string/btnGenerateReport"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ViewStreak" />

            <Button
                android:id="@+id/PickCurrency"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_marginStart="123dp"
                android:layout_marginTop="19dp"
                android:backgroundTint="#A080DF"
                android:text="@string/btnCurrency"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnCreateBudget" />

            <Button
                android:id="@+id/ViewStreak"
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_marginStart="123dp"
                android:layout_marginTop="7dp"
                android:backgroundTint="#A080DF"
                android:text="@string/btnViewStreak"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PickCurrency" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-50dp"
            android:paddingStart="9dp"
            android:paddingEnd="1dp"
            app:itemIconTint="@color/nav_item_color"
            app:itemTextColor="@color/nav_item_color"
            app:labelVisibilityMode="labeled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:menu="@menu/bottom_nav_menu" />




    </androidx.constraintlayout.widget.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    android:layout_margin="8dp"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Budget Name -->
        <TextView
            android:id="@+id/budgetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Name"
            android:textStyle="bold"
            android:textSize="18sp" />


        <!-- Budget Range -->
        <TextView
            android:id="@+id/budgetRange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Budget Range: R0.00 - R0.00"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <!--
            Source: https://github.com/PhilJay/MPAndroidChart/blob/master/MPChartExample/src/main/res/layout/activity_barchart.xml
            Author: PhilJay (GitHub)
            License: Apache License 2.0 (https://www.apache.org/licenses/LICENSE-2.0)
            Adapted by: Lusanda Mlotshwa for Pennywise
            Purpose: Integrates a HorizontalBarChart from MPAndroidChart into the app's layout
            Modifications:
            - Adjusted layout size and margins
        -->
        <!-- Horizontal Bar Chart -->
        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/barChart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/noDataMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No data available"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="16sp"
            android:textColor="@android:color/darker_gray"/>

        <!-- Progress Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <!-- Progress Bar Wrapper -->
            <FrameLayout
                android:id="@+id/progressWrapper"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:background="@drawable/bar_shape">

                <View
                    android:id="@+id/actualSpendingBar"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bar_shape" />

                <View
                    android:id="@+id/minLine"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/green"
                    android:layout_gravity="start" />

                <View
                    android:id="@+id/maxLine"
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/red"
                    android:visibility="visible"
                />


            </FrameLayout>

            <!-- Labels for Min and Max -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/minLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min"
                    android:textSize="12sp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:layout_gravity="start"
                    android:translationX="0dp" />

                <TextView
                    android:id="@+id/maxLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max"
                    android:textStyle="bold"
                   android:textColor="@color/red"
                    android:textSize="12sp"
                    android:translationX="0dp" />
            </FrameLayout>

            <!-- Spending status text -->
            <TextView
                android:id="@+id/statusText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginTop="4dp"
                android:textStyle="bold"
                android:textSize="14sp"/>
        </LinearLayout>



        <!-- Edit Budget Button -->
        <Button
            android:id="@+id/btnEditBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Budget"
            android:backgroundTint="#CC5500"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/btnDeleteBudget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="#000000"
            android:text="Delete Budget" />

    </LinearLayout>
</androidx.cardview.widget.CardView>


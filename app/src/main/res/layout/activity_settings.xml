<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".Settings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvSettingsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Settings Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round"
                android:orientation="vertical"
                android:elevation="4dp"
                android:padding="8dp">

                <!-- Profile -->
                <LinearLayout
                    android:id="@+id/llProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Profile"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#999090" />
                </LinearLayout>

                <!-- Sub-menu for Profile -->
                <LinearLayout
                    android:id="@+id/subProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="56dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Profile"
                        android:paddingVertical="8dp"
                        android:textSize="14sp"
                        android:textColor="#999090"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:paddingVertical="8dp"
                        android:textSize="14sp"
                        android:textColor="#999090"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Security"
                        android:paddingVertical="8dp"
                        android:textSize="14sp"
                        android:textColor="#999090"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0" />

                <!-- Currency -->
                <LinearLayout
                    android:id="@+id/llCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_currency_exchange" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Currency"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#999090"
                        />
                </LinearLayout>

                <!-- Sub-menu for Currency -->
                <LinearLayout
                    android:id="@+id/subCurrency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="56dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select Default Currency"
                        android:paddingVertical="8dp"
                        android:textSize="14sp"
                        android:textColor="#999090"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Currency Format"
                        android:paddingVertical="8dp"
                        android:textSize="14sp"
                        android:textColor="#999090"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0" />

                <!-- Notifications -->
                <LinearLayout
                    android:id="@+id/llNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notifications"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#999090" />
                </LinearLayout>

                <!-- Sub-menu for Notifications -->
                <LinearLayout
                    android:id="@+id/subNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="56dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget Alerts"
                        android:paddingVertical="8dp"
                        android:textSize="14sp"
                        android:textColor="#999090"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Weekly Summary"
                        android:paddingVertical="8dp"
                        android:textSize="14sp"
                        android:textColor="#999090"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0" />

                <!-- Theme -->
                <LinearLayout
                    android:id="@+id/llTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_theme" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Theme"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#999090" />
                </LinearLayout>

                <!-- Sub-menu for Theme -->
                <LinearLayout
                    android:id="@+id/subTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="56dp">

                    <Switch
                        android:id="@+id/switchDarkMode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Dark Mode"
                        android:textSize="16sp"
                        android:paddingVertical="8dp"
                        android:textColor="#999090" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E0E0E0" />

                <!-- Logout -->
                <LinearLayout
                    android:id="@+id/llLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_logout" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:layout_marginStart="16dp"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#D32F2F" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
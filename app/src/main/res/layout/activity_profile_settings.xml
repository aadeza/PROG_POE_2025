<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrnd3"
    android:orientation="vertical"
    tools:context=".Register">

    <LinearLayout
        android:layout_margin="14dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:visibility="gone"
            android:layout_gravity="center" />

        <!-- User Info Fields -->
        <EditText
            android:id="@+id/edtName"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/round"
            android:backgroundTint="#f6f6f6"
            android:hint="@string/reg_name_hint"
            android:inputType="text"
            android:padding="8dp"
            android:textColor="#999090"
            android:textColorHint="#546E7A"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edtSurname"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:backgroundTint="#f6f6f6"
            android:hint="@string/reg_surname_hint"
            android:inputType="text"
            android:padding="8dp"
            android:textColorHint="#546E7A"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edtPhoneNum"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:backgroundTint="#f6f6f6"
            android:hint="@string/reg_phone_hint"
            android:inputType="phone"
            android:padding="8dp"
            android:textColorHint="#546E7A"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edtEmailAddress"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:backgroundTint="#f6f6f6"
            android:hint="@string/email_hint"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textColorHint="#546E7A"
            android:enabled="false"
            android:focusable="false"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill" />

        <!-- Divider / Label -->


        <!-- New Password Fields -->
        <EditText
            android:id="@+id/edtRegPassword"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/round"
            android:backgroundTint="#f6f6f6"
            android:hint="@string/reg_password_hint"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="#546E7A"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill" />

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round"
            android:backgroundTint="#f6f6f6"
            android:hint="@string/reg_password_confirm_hint"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="#546E7A"
            android:layout_gravity="center_horizontal"
            tools:ignore="Autofill" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To update your info, please confirm your current password:"
            android:textColor="#546E7A"
            android:textSize="14sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center_horizontal"/>

        <!-- Current Password -->
        <EditText
            android:id="@+id/edtCurrentPassword"
            android:layout_width="380dp"
            android:layout_height="56dp"
            android:background="@drawable/round"
            android:backgroundTint="#f6f6f6"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColorHint="#546E7A"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnDoneReg"
            android:layout_width="285dp"
            android:layout_height="59dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/reg_button_text" />
    </LinearLayout>

</LinearLayout>
